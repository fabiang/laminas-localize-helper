{
    "name": "fabiang/zf-localize-helper",
    "description": "Zend Framework module for setting locale to all view helpers, validators and filters",
    "type": "library",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Fabian Grutschus",
            "email": "f.grutschus@lubyte.de"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^5.5 || ^7.0",
        "zendframework/zend-filter": "^2.0",
        "zendframework/zend-servicemanager": "^2.7.6 || ^3.0",
        "zendframework/zend-validator": "^2.0",
        "zendframework/zend-view": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Fabiang\\LocalizeHelper\\": "src/"
        }
    },
    "require-dev": {
        "behat/behat": "^3.2.1",
        "phpunit/phpunit": "^4.8.26 || ^5.5.5",
        "zendframework/zend-i18n": "^2.0",
        "zendframework/zend-modulemanager": "^2.7",
        "zendframework/zend-mvc": "^2.0 || ^3.0",
        "zendframework/zend-mvc-i18n": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Fabiang\\LocalizeHelper\\Behat\\": "tests/features/bootstrap/"
        }
    }
}
